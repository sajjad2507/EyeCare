<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_black">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/blue_light_sleep"
        style="@style/text_view_32ssp_bold_txt_style"
        android:layout_marginTop="@dimen/__40sdp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        tools:text="@string/studies_shows_that_screen_blue_light_before_bed_can_disrupt_sleep_making_it_harder_to_fall_asleep"
        android:textSize="@dimen/__16ssp"
        android:textColor="@color/light_white_text"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/__20sdp"
        android:lineSpacingExtra="0dp"
        android:lineSpacingMultiplier="1.0"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_onboarding_1"
        android:layout_marginHorizontal="@dimen/__20sdp"
        android:layout_marginTop="@dimen/__50sdp"
        android:layout_marginBottom="@dimen/_200sdp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/skip_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/allow_btn"
        android:background="@drawable/skip_button_bg"
        tools:text="Skip For Now"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginHorizontal="@dimen/__24sdp"
        android:layout_marginBottom="@dimen/__8sdp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/allow_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/selected_filter_bg"
        tools:text="Allow"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginHorizontal="@dimen/__24sdp"
        android:layout_marginBottom="@dimen/__8sdp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>