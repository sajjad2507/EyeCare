<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_black"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/__24sdp"
        android:layout_marginTop="@dimen/__24sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/menu"
            android:layout_width="@dimen/__24sdp"
            android:layout_height="@dimen/__24sdp"
            android:src="@drawable/menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/blue_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/__8sdp"
            android:layout_marginTop="@dimen/__4sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/blue"
            android:textColor="@color/blue_alpha_50"
            android:textSize="@dimen/__20ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/menu"
            app:layout_constraintTop_toTopOf="@+id/menu" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/light_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/__6sdp"
            android:layout_marginTop="@dimen/__4sdp"
            android:paddingTop="1dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/blue_light_filter"
            android:textColor="@color/light_white_text"
            android:textSize="@dimen/__18ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/blue_title_text"
            app:layout_constraintTop_toTopOf="@+id/menu" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/thumb_drawable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/menu"
            app:thumbTint="@color/blue"
            app:track="@drawable/track_drawable" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/__24sdp"
        android:layout_marginTop="@dimen/__12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_menu">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/filter_selected"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/selected_filter_bg"
                android:paddingTop="@dimen/__12sdp"
                android:paddingBottom="@dimen/__12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!--                <androidx.appcompat.widget.AppCompatImageView-->
                <!--                    android:id="@+id/filter_icon"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginVertical="@dimen/__25sdp"-->
                <!--                    android:layout_marginStart="@dimen/__16sdp"-->
                <!--                    android:src="@drawable/candle"-->
                <!--                    app:layout_constraintBottom_toBottomOf="parent"-->
                <!--                    app:layout_constraintStart_toStartOf="parent"-->
                <!--                    app:layout_constraintTop_toTopOf="parent" />-->

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/circular_view"
                    android:layout_width="@dimen/__40sdp"
                    android:layout_height="@dimen/__40sdp"
                    android:layout_marginVertical="@dimen/__25sdp"
                    android:layout_marginStart="@dimen/__16sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Circle"
                    app:strokeColor="@color/white"
                    app:strokeWidth="@dimen/__1sdp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/filter_icon"
                    android:layout_width="@dimen/__16sdp"
                    android:layout_height="@dimen/__16sdp"
                    tools:src="@drawable/ic_candle"
                    app:layout_constraintBottom_toBottomOf="@id/circular_view"
                    app:layout_constraintEnd_toEndOf="@id/circular_view"
                    app:layout_constraintStart_toStartOf="@id/circular_view"
                    app:layout_constraintTop_toTopOf="@+id/circular_view" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/selected_filter_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/__12sdp"
                    android:text="@string/candle_light"
                    android:textColor="@color/light_white_text"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/__20ssp"
                    android:layout_marginTop="@dimen/_minus1sdp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/select_filter_btn"
                    app:layout_constraintStart_toEndOf="@+id/circular_view"
                    app:layout_constraintTop_toTopOf="@+id/circular_view" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/selected_filter_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/__12sdp"
                    android:text="@string/click_here_to_change_the_color_filter"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/light_white_text"
                    android:textSize="@dimen/__10ssp"
                    app:layout_constraintEnd_toEndOf="@+id/select_filter_btn"
                    app:layout_constraintStart_toEndOf="@+id/circular_view"
                    app:layout_constraintTop_toBottomOf="@+id/selected_filter_title" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/select_filter_btn"
                    android:layout_width="@dimen/__24sdp"
                    android:layout_height="@dimen/__24sdp"
                    android:layout_marginVertical="@dimen/__30sdp"
                    android:layout_marginEnd="@dimen/__16sdp"
                    android:src="@drawable/ic_select_filter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/how_it_works"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/__16sdp"
                android:background="@drawable/stroke_bg"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/filter_selected">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/how_it_works_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/__12sdp"
                    android:layout_marginStart="@dimen/__24sdp"
                    android:src="@drawable/ic_how_it_works"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/how_it_works_forward_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/__12sdp"
                    android:layout_marginEnd="@dimen/__24sdp"
                    android:src="@drawable/forward"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/how_it_works_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/__12sdp"
                    android:text="@string/how_it_works"
                    android:textColor="@color/light_white_text"
                    android:textSize="@dimen/__16ssp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/how_it_works_forward_icon"
                    app:layout_constraintStart_toEndOf="@+id/how_it_works_icon"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ads"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/__16sdp"
                android:background="@drawable/stroke_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/how_it_works">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ad_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/__70sdp"
                    android:text="@string/ad_is_loading"
                    android:textColor="@color/light_white_text"
                    android:textSize="@dimen/__11ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/auto_timer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/__16sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="@drawable/selected_filter_bg"
                app:layout_constraintEnd_toStartOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ads">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/auto_timer_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/__55sdp"
                    android:layout_marginTop="@dimen/__20sdp"
                    android:layout_marginBottom="@dimen/__50sdp"
                    android:src="@drawable/ic_auto_timer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/auto_timer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/__5sdp"
                    android:fontFamily="@font/baloo_bhaina_2"
                    android:text="@string/auto_timer"
                    android:textAlignment="center"
                    android:textColor="@color/light_white_text"
                    android:textSize="@dimen/__16ssp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/auto_timer_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/__16sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:background="@drawable/selected_filter_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/divider"
                app:layout_constraintTop_toBottomOf="@+id/ads">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/pause_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/__55sdp"
                    android:layout_marginTop="@dimen/__20sdp"
                    android:layout_marginBottom="@dimen/__50sdp"
                    android:src="@drawable/ic_pause"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pause_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/__5sdp"
                    android:fontFamily="@font/baloo_bhaina_2"
                    android:text="@string/_60s_pause"
                    android:textAlignment="center"
                    android:textColor="@color/light_white_text"
                    android:textSize="@dimen/__16ssp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pause_icon" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/intensity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/__12sdp"
                android:background="@drawable/stroke_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/auto_timer">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/intensity_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/__12sdp"
                    android:layout_marginTop="@dimen/__12sdp"
                    android:layout_marginBottom="@dimen/__50sdp"
                    android:src="@drawable/ic_intensity_blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/intensity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/__12sdp"
                    android:text="@string/intensity"
                    android:textColor="@color/light_white_text"
                    android:textSize="@dimen/__16ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/intensity_icon"
                    app:layout_constraintTop_toTopOf="@id/intensity_icon" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/intensity_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/__12sdp"
                    android:src="@drawable/ic_intensity_blue"
                    android:text="@string/_75"
                    android:textColor="@color/light_white_text"
                    android:textSize="@dimen/__16ssp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/intensity_icon" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/intensity_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/__22sdp"
                    android:max="75"
                    android:progress="0"
                    android:progressTint="@color/blue"
                    android:thumb="@drawable/ic_seekbar_thumb"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/intensity_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/__12sdp"
                android:background="@drawable/stroke_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/intensity">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/dim_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/__12sdp"
                    android:layout_marginTop="@dimen/__12sdp"
                    android:layout_marginBottom="@dimen/__50sdp"
                    android:src="@drawable/icc_screen_dim_blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dim_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/__12sdp"
                    android:text="@string/screen_dim"
                    android:textColor="@color/light_white_text"
                    android:textSize="@dimen/__16ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/dim_icon"
                    app:layout_constraintTop_toTopOf="@id/dim_icon" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dim_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/__12sdp"
                    android:src="@drawable/ic_intensity_blue"
                    android:text="@string/_75"
                    android:textColor="@color/light_white_text"
                    android:textSize="@dimen/__16ssp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/dim_icon" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/dim_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/__22sdp"
                    android:max="75"
                    android:progress="0"
                    android:progressTint="@color/blue"
                    android:thumb="@drawable/ic_seekbar_thumb"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dim_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>