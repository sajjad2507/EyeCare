<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/stroke_bg"
    android:paddingStart="@dimen/__12sdp"
    android:paddingEnd="@dimen/__20sdp"
    android:paddingVertical="@dimen/__20sdp"
    android:layout_marginEnd="@dimen/__4sdp"
    android:layout_marginBottom="@dimen/__4sdp"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/reminder_heading"
        android:layout_width="@dimen/__150sdp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Personal Types"
        android:textSize="@dimen/__14ssp"
        android:textColor="@color/blue"
        android:fontFamily="@font/montserrat_bold"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/reminder_desc"
        android:layout_width="@dimen/__150sdp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reminder_heading"
        android:layout_marginTop="@dimen/__10sdp"
        tools:text="Gas,Water,pump,chawal,ghee,attaa,more thing"
        android:textSize="@dimen/__14ssp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:textStyle="bold"
        android:maxLines="3"
        android:ellipsize="end"
        />






</androidx.constraintlayout.widget.ConstraintLayout>